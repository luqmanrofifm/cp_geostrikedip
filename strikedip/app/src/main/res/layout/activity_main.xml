                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Rad(X)    :"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvRadX"
                        android:text=":     12345"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Rad(Y)    :"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvRadY"
                        android:text=":     12345"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
