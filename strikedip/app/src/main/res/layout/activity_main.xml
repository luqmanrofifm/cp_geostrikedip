                    <TextView
                        android:id="@+id/tvRadZ"
                        android:text=":     12345"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Deg(X)    :"
                        android:textSize="14dp"
