<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="#E3BB1B">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Sensor"
                android:textSize="17dp"
                android:textFontWeight="1000"
                android:textColor="@color/black"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Accel(X)    :"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvAcceloX"
                        android:text=":     12345"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Accel(Y)    :"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvAcceloY"
                        android:text=":     12345"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Accel(Z)    :"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvAcceloZ"
                        android:text=":     12345"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Magnet(X)    :"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvMagnetoX"
                        android:text=":     12345"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Magnet(Y)    :"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvMagnetoY"
                        android:text=":     12345"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Magnet(Z)    :"
